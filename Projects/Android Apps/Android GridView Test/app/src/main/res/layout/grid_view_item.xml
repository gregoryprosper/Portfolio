<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/playerPicture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="Player Picture"
        android:src="@drawable/dwayne_wade" />

    <TextView
        android:id="@+id/playerNumber"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="6"
        android:textSize="20sp"
        android:textColor="#fff"
        android:background="#000"
        android:layout_alignEnd="@+id/playerPicture"
        android:layout_alignBottom="@+id/playerPicture"/>

</RelativeLayout>