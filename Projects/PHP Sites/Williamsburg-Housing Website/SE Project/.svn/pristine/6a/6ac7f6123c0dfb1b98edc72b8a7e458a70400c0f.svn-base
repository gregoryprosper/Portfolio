/* Layout */ 

html, body{
    height: 100%;
}

.wrapper{
    min-height: 100%;
    margin: 0 auto -100px; /* the bottom margin is the negative value of the footer's height */
}

.footer, .push{
    height: 100px;
}

.container{
    max-width: 100%;
}

#homePageJumbotron{
    padding-top: 150px;
    height: 500px;
    background: url("../images/living_room.jpg") no-repeat center center;
    background-size: 100%,500px;
}

#myCarousel img{
    width: 100%;
    height: 405px;
}

#searchBar{
    margin-left: auto;
    margin-right: auto;
    width: 80%;
}

#searchArea{
    color: white;
    padding: 20px;
    border-radius: 25px;
    background-color:rgba(0,0,0,0.5);
}

#logo{
    max-height: 50px;
}

#logo2{
    max-height: 30px;
    display:inline;
    vertical-align:bottom;
}

.icon{
    height: 40px;
    width: 50px;
    vertical-align: middle;
    margin-right: 20px;
}

.iconRow{
    margin-bottom: 50px;
    font-size: large;
}

#demoTag{
    text-align: center;
}

.footer {
	height: 100px; /* .push must be the same height as .footer */
        background-color: black;
        color: white;
        
}

#footerList{
    list-style-type: none;
    margin: 0;
    padding: 0;
}

#footerList li{
    padding-left: 25px;
    padding-right: 25px;
    display: inline;
}

#footerContent{
    text-align: center;
    padding-top: 40px;
}

#ListingPrice{
    font-size:x-large;
    font-weight: bold;
    color: #009900;
}
    
#ListingAddress{
    font-size:large;
    color: #1780FF;
}

#ListingDetailsBdBa{
    font-size:larger;
    font-weight: bold;
}

#ListingSaleRent{
    font-size:large;
}
    
#ListingDetails{
    font-size:medium;
}
    
#listImage{
    height: 188px;
    width: 250px;
}

#listImageArea{
    width: 250px;
    height: 188px;
    margin-right: 10px;
    float: left;
}

#listDetailsArea{
    height: 188px;
    width: 300px;
    margin-left: 10px;
    float: left;;
}

#listDetailsArea p{
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

#listBulletsArea{
    height: 188px;
    width: 130px;
    float: left;
    margin-left: 25px;
}

#ListingEditButtons{
    margin-left: 10%;
    float: left;
}

#listPostDateArea{
    height: 188px;
    float: left;
    margin-left: 50px;
	
}

.postDateNew{
	font-size: large;
	color: #009900;
}

.postDate{
	font-size: large;
}

.listingRows{
    border-top-style: outset;
    padding-top: 15px;
    padding-bottom: 50px;
    padding-left: 20px;
    padding-right: 20px;
}

.UserlistingRows{
    border-top-style: outset;
    padding-top: 15px;
    padding-bottom: 50px;
    padding-left: 20px;
    padding-right: 20px;
}

.listingRows:hover{
    background: #e8e8e8;
    box-shadow: 10px 10px 5px #888888;
}

#mainRowContent{
    padding-top: 30px;
    padding-bottom: 30px;
}

#reasonsToUseImageHeader{
    width: 100px;
    height: 100px;
    margin-left: auto;
    margin-right: auto;
}

.outer{
    display: table;
    position: absolute;
    height: 188px;
    width: 150px;
}

.middle{
    display: table-cell;
    vertical-align: middle;
}

.inner {
    margin-left: auto;
    margin-right: auto; 
}

.required::after{
    content:"*";
}

label.error{
    color: #F00;
    font-weight: bold;
}

input.error, select.error, textarea.error{
    border: 1px red solid;
}

#filter{
    background-color: #ebebeb;
    border-radius: 5px;
    padding-top: 15px;
    margin-top: 5px;
    margin-bottom: 10px;
    height: 60px;
    width: 100%;
}

.form-inline{
    width: 90%;
    margin-left: auto;
    margin-right: auto;
}

.form-inline > select{
    float: left;
}

.form-inline > button{
    float: right;
}

select{
    margin-right: 10px;
}

#profilePic{
    margin-left: auto;
    margin-right: auto;
    width: 250px;
    height: 250px;
    margin-bottom: 20px;
}

#coverPic{
    margin-left: auto;
    margin-right: auto;
    max-width: 300px;
    margin-bottom: 20px;
}

#submitChangesButton{
    text-align: center;
}

.changeForm{
    margin-bottom: 75px;
}

#map{ 
    width:100%; 
    height:400px; 
    margin-top: 20px;
} 

#realtorPic{
    width: 200px;
    height: 200px; 
}

.textXXLarge{
    font-size: xx-large;
}

.textXLarge{
    font-size: x-large;
}

.textLarge{
    font-size: large;
}

#postHeader p{
    display: inline;
    font-size: medium;
}

